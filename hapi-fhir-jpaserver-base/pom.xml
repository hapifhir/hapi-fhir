							<excludeResourceNames>
								<!-- <excludeResourceName>OperationDefinition</excludeResourceName> <excludeResourceName>OperationOutcome</excludeResourceName> -->
							</excludeResourceNames>
						</configuration>
					</execution>
				</executions>
				<dependencies>
