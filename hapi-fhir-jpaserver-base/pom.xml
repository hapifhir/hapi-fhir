									</fileset>
									<fileset dir="${project.basedir}/src/main/resources/ca/uhn/fhir/jpa/docs/database">
										<include name="hapifhirpostgres94-init01.sql"/>
									</fileset>
								</concat>
							</target>
						</configuration>
					</execution>
				</executions>
