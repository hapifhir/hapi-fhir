              <xs:documentation xml:lang="en">The status of the authorization/intention reflected by the referral request record.</xs:documentation>
           </xs:annotation>
          </xs:element>
          <xs:element name="intent" minOccurs="1" maxOccurs="1" type="RequestIntent">
